
<div class="container">

  <%= form_for([@post, @post.comments.build]) do |f| %>
    <% if !parent.nil? %>
      <input type="hidden" name="comment[parent_id]" value="<%= parent.id %>">
    <% end %>

    <div class="feild form-group">
      <%= f.text_area :comment, required: true, class:"form-control", placeholder:"Comment" %>
    </div>  
    <br /> <br />

    <div class="actions">
      <%= f.submit class: 'btn btn-primary' %>
    </div>

  <% end %>

</div>
