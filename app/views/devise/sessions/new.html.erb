
<section class="vh-100" style="background-color:  #ECF0F1;">
<div class= "container h-50">
<div class="row d-flex justify-content-center align-items-center h-100">
<div class="col-lg-12 col-xl-11">
<h2>Log in</h2>
 <div class="card text-black" style="border-radius: 25px;">
 <div class="row justify-content-center">


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <br />
    <%= f.email_field :email, class:"form-control", placeholder:"Email" , autofocus: true, autocomplete: "email" %>
  </div>
  <br />
  <div class="field form-group">
    <br />
    <%= f.password_field :password, class:"form-control",placeholder:"Password",  autocomplete: "current-password" %>
  </div>
  <br />
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
<br />
  <div class="actions d-flex justify-content-start">
    <%= f.submit "Log in", class:'btn btn-primary btn-lg' %>
  </div>
<% end %>
<br />
</div>
</div>
<%= render "devise/shared/links" %>
</div>
</div>
</div>
</section>
