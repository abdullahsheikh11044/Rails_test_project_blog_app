<div class="conatiner">
<div class="card" style="width: 28rem;">
  <!--<img src="..." class="card-img-top" alt="...">-->
  <div class="card-body">
    <h5 class="card-title"><%= @post.title %></h5>
    <p class="card-text"><%= @post.content %></p>
    <% if current_user.present?  && current_user==@post.user%>
    <%= link_to "Edit", edit_post_path(@post), class:"btn btn-primary"%>
    <%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure"}, class:"btn btn-danger"%>
    <% end %>
  </div>
  <div>
</div>
<div class="container">
    <h2 class="subtitle"><strong><%= @post.comments.count %></strong>Comments</h2>
    <%=render @post.comments%> 
</div>
<% if user_signed_in?%>
  <% like = current_user.likes.find_by(post: @post)%>
  <% if like.nil? %>
  <%= button_to "Like", likes_path, params: { like: { post_id: @post.id}}, method: :post%>
  <%end%>
  <div class="container">
    <div class="comment-form"> 
    <h3>Leave a comment</h3>
    <%= render 'comments/form'%>
    </div>
    </div>
<% else %>
<%= link_to "Login",new_user_session_path%>
<%end%>