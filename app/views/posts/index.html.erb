<%= raw pagy_nav(@pagy) %>
<div class="container py-4">
    <div class="row">
        <div class=" col-12 ">
        <div class='container-fluid'> 
        <div class='row'> 
            <%@post.each do |post|%>
        <div class='col-lg-6 my-2'>
            <% if post.unpublish? && current_user.moderator?%>
        <div class="card w-75 shadow py-2">
            <div class="card-body">
                <% if post.image.attached?%>
                    <img src=<%= url_for(post.image) %> class="img-fluid">
                <%end%>
                <h5 class="card-title py-2">Title : 
                    <%= post.title%>
                </h5>
                <div class="align py-2">
                <div class="card-text">
                Description : <%=  post.body%>
                </div>
                </div>
                <%= link_to 'Show', post, class:"btn btn-primary"%>
            </div>
        </div>
    <% elsif post.publish? && current_user.user?%>
    <div class="card text-center w-75 shadow py-4">
        <div class="card-body">
            <% if post.image.attached?%>
            <img src=<%= url_for(post.image) %> class="img-thumbnail">
            <%end%>
            <h5 class="card-title py-2">Title :
                <%= post.title%>
                </h5>
                <div class="align py-2">
                <div class="card-text">
                Description : <%=  post.body%>
                </div>
                </div>
                <%= link_to 'Show', post, class:"btn btn-primary"%>
        </div>
    </div>
    <%end%>
</div>    
<%end%>
</div>
</div>
</div>
</div>
</div>
<hr/>
<div class="container">
<div class="row">
<%@post.each do |post|%>
<div class="col-6">
    <% if post.publish? && post.reports.count.positive? && current_user.moderator?%>
    <div class="card w-75 shadow py-4">
        <div class="card-body">
        <% if post.image.attached?%>
            <img src=<%= url_for(post.image) %> class="img-thumbnail">
            <%end%>
            <h5 class="card-title py-2">Title :
                <%= post.title%>
                </h5>
                <div class="align py-2">
                <div class="card-text">
                Description : <%=  post.body%>
                </div>
                </div>
                <%= link_to 'Show', post, class:"btn btn-primary"%>
        </div>
    </div>
<%end%>
</div>
<%end%>
</div>
</div>


