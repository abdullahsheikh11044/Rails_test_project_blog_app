
<div class="section">
    <%= form_for @post do |f| %>
    <div class="feild form-group">
    <%= f.text_field :title,class:"form-control", placeholder:"Title" %>
    </div>
    <br /> <br />

    <div class="field">
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>
    <br /> <br />
    <% if current_user.admin?%>
    <div>    
    <%= f.label :Post_Type %>    
    <%= f.select :status, Post.statuses.keys.to_a %>  
    </div>
    <%end%>
    <div class="actions">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
    <% end %>
</div>

